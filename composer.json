{
    "name": "signpostmarv/daft-nested-db-object",
    "description": "database implementation for signpostmarv/daft-nested-object",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftObject\\": "./vendor/signpostmarv/daft-object/tests-src/",
            "SignpostMarv\\DaftObject\\DaftNestedObject\\PHPStan\\": "./vendor/signpostmarv/daft-nested-object/PHPStan/",
            "SignpostMarv\\DaftObject\\DaftNestedDbObject\\Tests\\": "./Tests/",
            "SignpostMarv\\DaftObject\\DaftNestedObject\\Tests\\": "./vendor/signpostmarv/daft-nested-object/Tests/",
            "SignpostMarv\\DaftObject\\EasyDB\\": "./vendor/signpostmarv/daft-db-object/easydb-src/",
            "SignpostMarv\\DaftObject\\EasyDB\\Tests\\": "./vendor/signpostmarv/daft-db-object/easydb-tests/",
            "SignpostMarv\\DaftObject\\PHPStan\\": "./vendor/signpostmarv/daft-object/PHPStan/",
            "SignpostMarv\\DaftObject\\Tests\\": "./vendor/signpostmarv/daft-object/Tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv --coverage-clover=phpunit.clover",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-PDO": "*",
        "ext-mbstring": "*",
        "paragonie/easydb": "^2.6",
        "signpostmarv/daft-db-object": "^1.0",
        "signpostmarv/daft-nested-object": "^1.0",
        "signpostmarv/daft-object": "^1.1"
    },
    "require-dev": {
        "infection/infection": "^0.12.2",
        "maglnet/composer-require-checker": "^1.1",
        "phpstan/phpstan": "^0.11.1",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.1",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.6.1",
        "vimeo/psalm": "dev-master"
    }
}
